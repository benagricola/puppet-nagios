# File Managed by Puppet

define host{
    hostgroups <%= scope.lookupvar('hostgroups') %>
    host_name  <%= scope.lookupvar('name') %>
    alias      <%= scope.lookupvar('short_alias') %>
    address    <%= scope.lookupvar('ip') %>
    use        <%= scope.lookupvar('use') %>
<% if ! (/^(none|)$/i =~ scope.lookupvar('host_parent')) then -%>
    parents <%= scope.lookupvar('host_parent') -%>
<% end -%>
}
